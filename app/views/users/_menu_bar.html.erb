<div class="menubar">
  <div class="ui secondary menu">
    <%= link_to raw("<i class='home icon'></i> Home"), root_path, class: "item" %>
    <%= link_to raw("<i class='food icon'></i> Happy Hour Listing"), businesses_path, class: "item" %>
    <% if current_user %>
    <%= link_to raw("<i class='plus icon'></i> Add Business"), new_business_path, class: "item" if current_user.admin? %>
    <% end %>
    <div class="right menu">
    <%= link_to raw("<i class='user icon'></i> Back to Profile"), user_path(current_user.id), class: "item" if current_user && params[:action] == 'edit' %>
    <%= link_to raw("<i class='user icon'></i> Edit Profile"), edit_user_path(current_user.id), class: "item" if current_user && params[:action] == 'show' %>
    </div>
  </div>
</div>

