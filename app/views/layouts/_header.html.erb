    <div class="ribbon"></div>
    <!-- Header -->
    <div class="header_container">
       <div class="ui grid">
          <div class="four wide column"><%= link_to image_tag("logo.png"), root_path, class: "logo" %></div>
          <div class="eight wide center aligned column">
             <!-- Search Field -->
             <div class="ui small form" style="margin-top: 13px;">
                <div class="inline fields">
                <%= form_tag(businesses_path, method: 'get') do %>
                  <div class="field"><%= text_field_tag :query, "", placeholder: 'Search for..' %></div>
                  <div class="field"><%= submit_tag "Search", :class => 'ui small green button but_opacity' %></div>
                <% end %>
                </div>
             </div>
             <!-- Search Field End -->
          </div>
          <div class="four wide right aligned column">
            <div class="header_right_container">

            <!-- Login Area -->
            <% if current_user %>
            <div class="ui top right pointing dropdown">
              <% if current_user.photo? %>
              <div class="login_avatar" style="margin-top: -3px; width: 40px; height:40px; background: #000 url('<%= current_user.photo.url %>'); display: inline-block; border-radius: 3px; border: 1px solid black; background-size: 40px 40px;">
              <% else %>
              <div class="login_avatar" style="margin-top: -3px; width: 40px; height:40px; background: #000; display: inline-block; border-radius: 3px; border: 1px solid black; background-size: 40px 40px;"><%= image_tag "unknown_user.png", class: "unknown_avatar" %>
              <% end %>
              </div>
              <div class="menu" style="padding: 10px; width: 200px">
                <%= image_tag current_user.photo.url, class: "small_avatar" %>
                <strong><%= link_to "#{current_user.first_name} #{current_user.last_name[0]}.", user_path(current_user.id) if current_user.first_name %></strong>
                <br><%= current_user.location if current_user.location %>
                <div style="clear: left;">
                  <hr>
                  <%= link_to raw("<i class='user icon'></i> About Me"), user_path(current_user.id), class: "item" %>
                  <%= link_to raw("<i class='file text outline icon'></i> Edit Profile"), edit_user_path(current_user.id), class: "item" %>
                  <hr>
                  <%= link_to "Log Out", '/logout', class: 'ui mini red button clear_left', method: :delete %>           
                </div>


              </div>
              </div>
            </div>
            <% else %>
            <%= link_to "Sign Up", '/signup', class: "ui tiny orange button but_opacity" %>
            <%= link_to "Log In", '/login', class: "ui tiny teal button but_opacity"  %>
            <% end %>
            <!-- Login Area -->

            </div>
          </div>
       </div>
    </div>
    <!-- Header End -->