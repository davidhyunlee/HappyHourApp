<%= @business.name %>
<%= @business.address %>
<%= @business.address_2 %>
<%= @business.city %>
<%= @business.state %>
<%= @business.zip %>


<%= form_for ([@business, @review]) do |f| %>

	<%= f.text_area :body %>
	<%= f.submit "Add Review", class: "tiny button radius" %>

<% end %>

<% @business.reviews.each do |review| %>

  <%= simple_format(review.body) %>
  <%= review.created_at %>
  <%= time_ago_in_words(review.created_at) unless review.created_at.blank? %>
  <%= User.find(review.user_id.to_i).first_name unless review.user_id.to_i == 0 %>

<% end %>

<button class="test">Press Me</button>

<div class="ui modal">
 <i class="close icon"></i>
 <div class="header">
   Modal Title
 </div>
 <div class="content">
   <div class="image">
     An image can appear on left or an icon
   </div>
   <div class="description">
     A description can appear on the right
   </div>
 </div>
 <div class="actions">
   <div class="ui button">Cancel</div>
   <div class="ui button">OK</div>
 </div>
</div>

<script>
   $('.ui.modal').modal('attach events', '.test', 'show');
</script>