<%= render 'businesses/menu_bar' %>

<div class="ui two column grid">

  <div class="column">
    <div class="ui small form segment">
      <h4 class="ui dividing header">Business Details</h4> 
      <%= form_for @business do |f| %>
      <div class="field">
        <label>Business Name</label>
        <%= f.text_field :name, class: "ui input", placeholder: "Name of business..." %>
      </div>
      <div class="field">
        <label>Address</label>
        <%= f.text_field :address, class: "ui input", placeholder: "1234 Spooner St." %>
      </div>
      <div class="field">
        <label>Address 2</label>
        <%= f.text_field :address_2, class: "ui input", placeholder: "Unit 1" %>
      </div>
      <div class="field">
        <label>City</label>
        <%= f.text_field :city, class: "ui input", placeholder: "Los Angeles" %>
      </div>
      <div class="two fields">
        <div class="field">
        <label>State</label>
        <%= f.text_field :state, class: "ui input", placeholder: "CA" %> 
        </div>
        <div class="field">
        <label>ZIP</label>
        <%= f.text_field :zip, class: "ui input", placeholder: "90210" %>          
        </div>
      </div>
      <%= f.submit "Submit Business Details", class: "ui button" %>
      <% end %>
    </div>

  </div>
  
  <div class="column">
  </div>

</div>

