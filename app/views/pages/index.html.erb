<div class="menubar">
  <div class="ui secondary pointing menu">
    <%= link_to raw("<i class='home icon'></i> Home"), root_path, class: "active item" %>
    <%= link_to raw("<i class='food icon'></i> Happy Hour Listing"), businesses_path, class: "item" %>
    <%= link_to raw("<i class='user icon'></i> About Me"), user_path(current_user.id), class: "item" %>
    <div class="right menu">
      <div class="item">
        <div class="ui transparent icon input">
          <input type="text" placeholder="Search...">
          <i class="search link icon"></i>
        </div>
      </div>
      <%= link_to "Log Out", '/logout', class: 'ui item', method: :delete %>
    </div>
  </div>
</div>

